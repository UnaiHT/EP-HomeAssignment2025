@model IEnumerable<Domain.Models.Poll>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    @foreach (var poll in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card" style="width: 100%;">
                
                <div class="card-body">
                    <h5 class="card-title">@poll.Title&nbsp</h5>
                    <div class="mt-3">
                        <a href="/Poll/Vote/@poll.Id" class="btn btn-primary">Vote</a>

                        <a href="/Poll/Results/@poll.Id" class="btn btn-primary">Results</a>
                        
                    </div>
                    
                </div>
            </div>
        </div>
    }
</div>

<div>
    <a href="Poll/Create" class="btn btn-primary">Create New</a>
</div>